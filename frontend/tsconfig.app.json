{
  "extends": ["@tsconfig/vite-react/tsconfig.json", "../tsconfig.base.json"],
  "compilerOptions": {
    "outDir": "dist/app",
    "tsBuildInfoFile": "dist/app/tsconfig.tsbuildinfo",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "dist",
    "src/mocks/**/*.ts",
    "src/setupTests.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/test",
    "src/test",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts"
  ],
  "references": [
    {
      "path": "../packages/utils/tsconfig.lib.json"
    },
    {
      "path": "../packages/schemas/tsconfig.lib.json"
    },
    {
      "path": "../queue/tsconfig.app.json"
    },
    {
      "path": "../packages/models/tsconfig.lib.json"
    }
  ]
}
