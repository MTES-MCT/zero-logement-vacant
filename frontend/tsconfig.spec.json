{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/spec",
    "tsBuildInfoFile": "dist/spec/tsconfig.tsbuildinfo",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "include": [
    // Config files are handled by their own TS configs; exclude from build typecheck to avoid rootDir issues
    "src/mocks/**/*.ts",
    "src/setupTests.ts",
    "src/test",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
