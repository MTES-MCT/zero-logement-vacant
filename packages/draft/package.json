{
  "name": "@zerologementvacant/draft",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist '*.tsbuildinfo'",
    "copy": "copyfiles -V -u 1 'src/**/*.css' 'src/**/*.hbs' dist",
    "build": "tsc -b tsconfig.build.json && yarn copy",
    "dev": "nodemon --watch src -e ts --exec 'yarn build'"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.3",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^22.9.0"
  }
}
