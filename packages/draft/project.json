{
  "name": "@zerologementvacant/draft",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/draft/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "generatePackageJson": true,
        "main": "packages/draft/src/index.ts",
        "tsConfig": "packages/draft/tsconfig.lib.json",
        "outputPath": "packages/draft/dist/lib",
        "rootDir": "packages/draft/src",
        "assets": [
          {
            "input": "packages/draft/src",
            "glob": "**/*.{css,json,hbs,otf}",
            "output": "./"
          }
        ]
      }
    }
  }
}
