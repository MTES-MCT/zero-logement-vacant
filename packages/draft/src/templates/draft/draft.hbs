<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <title>Zéro Logement Vacant</title>
  </head>
  <body>
    {{#if watermark}}
    <div class="watermark">Prévisualisation</div>
    {{/if}}
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <header class="header">
      <section class="header--left">
        {{#each logo}}
          <img alt="logo" class="header__image" src="{{this}}" />
        {{/each}}
      </section>
      <section class="header--right">
        <section class="header__sender">
          {{#if sender.name}}
            <p>{{sender.name}}</p>
          {{/if}}
          {{#if sender.service}}
            <p>{{sender.service}}</p>
          {{/if}}
          {{#if sender.firstName}}
            {{#if sender.lastName}}
              <p>{{sender.firstName}} {{sender.lastName}}</p>
            {{/if}}
          {{/if}}
          {{#if sender.address}}
            <p>{{sender.address}}</p>
          {{/if}}
          {{#if sender.email}}
            <p>{{sender.email}}</p>
          {{/if}}
          {{#if sender.phone}}
            <p>{{sender.phone}}</p>
          {{/if}}
        </section>
        <section class="header__recipient">
          <strong>À l’attention de</strong>
          <p>{{owner.fullName}}</p>
          {{#each owner.address}}
            <p>{{this}}</p>
          {{/each}}
        </section>
      </section>
    </header>
    <main>
      <header class="main__header">
        {{#if writtenFrom}}
          {{#if writtenAt}}
            <p>À {{writtenFrom}}, le {{localdate writtenAt}}</p>
          {{else}}
            <p>À {{writtenFrom}}</p>
          {{/if}}
        {{else}}
          {{#if writtenAt}}
            <p>Le {{localdate writtenAt}}</p>
          {{/if}}
        {{/if}}
        {{#if subject}}
        <p><strong>Objet : </strong>{{subject}}</p>
        {{/if}}
      </header>
      <section class="main__body">
        {{{body}}}
      </section>
    </main>
    <footer>
      <section class="footer__signature">
        {{#each sender.signatories}}
          {{#if this.file}}
            <p><img src="{{this.file}}" alt="Signature" class="footer__image" /></p>
          {{/if}}
          {{#if this.firstName}}
            {{#if this.lastName}}
              <p>{{this.firstName}} {{this.lastName}}</p>
            {{/if}}
          {{/if}}
          {{#if this.role}}
            <p>{{this.role}}</p>
          {{/if}}
        {{/each}}
      </section>
    </footer>
  </body>
</html>
