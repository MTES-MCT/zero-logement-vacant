{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "src/types"],
    "moduleResolution": "bundler",
    "module": "esnext"
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src"]
}
