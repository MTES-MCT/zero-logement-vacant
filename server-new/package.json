{
  "name": "@zerologementvacant/server",
  "engines": {
    "node": "^20",
    "yarn": "^4"
  },
  "packageManager": "yarn@4.1.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist *.tsbuildinfo",
    "build": "yarn migrate && tsc -b tsconfig.build.json && tsc-alias",
    "dev": "nodemon --watch src src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "db": "knex --knexfile=src/infra/database/knexfile.ts",
    "migrate": "yarn db migrate:latest"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "@sentry/integrations": "^7.109.0",
    "@sentry/node": "^7.109.0",
    "@zerologementvacant/shared": "workspace:*",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-promise-router": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.5",
    "pg-query-stream": "^4.5.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/convict-format-with-validator": "^6.0.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.191",
    "@types/node": "^20.12.3",
    "@types/pg": "^8.11.4",
    "@types/superagent": "^8",
    "@types/supertest": "^6",
    "@types/uuid": "^9",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-sorted": "^1.0.15",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "superagent": "^8.1.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  }
}
