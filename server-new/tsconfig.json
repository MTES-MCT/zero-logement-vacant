{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "references": [
    { "path": "../shared/tsconfig.build.json"}
  ],
  "include": ["src"]
}
