{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"]
    },
    "rootDir": "src"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "references": [
    { "path": "../shared-new/tsconfig.build.json" }
  ],
  "include": ["src/**/*.ts"]
}
