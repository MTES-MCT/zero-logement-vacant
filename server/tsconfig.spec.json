{
  "extends": ["@tsconfig/node24/tsconfig.json", "../tsconfig.base.json"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/spec",
    "tsBuildInfoFile": "dist/spec/tsconfig.tsbuildinfo",
    "paths": {
      "~/*": ["./src/*"]
    },
    "typeRoots": ["../node_modules", "node_modules", "src/types"],
    "types": [
      "express",
      "express-jwt",
      "jest-extended",
      "jest-sorted",
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*.test.ts",
    "src/test/global-setup.ts",
    "src/test/setup-env.ts",
    "src/test/setup-tests.ts",
    "src/test/testUtils.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}

