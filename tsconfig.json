{
  "compilerOptions": {
    "lib": ["esnext"],
    "outDir": "./dist",
    "target": "esnext",
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "files": [],
  "references": [
    {
      "path": "frontend"
    },
    {
      "path": "server"
    }
  ],
  "exclude": ["node_modules", "**/*.d.ts", "frontend"]
}
